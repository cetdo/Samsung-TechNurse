    <script>
        function validatePass() {
            pass = document.getElementById('password').value
            confirmPassword = document.getElementById('password2').value
            lowerPassword = pass.toLowerCase()
            flag = true;
            if (pass != confirmPassword) {
                flag = false;
            }
            if (pass == lowerPassword) {
                flag = false;
            }
            if (pass.length < 6) {
                flag = false;
            }
            is_number = false;
            for (var i = 0; i <= 9; i++) {
                if (pass.search(i.toString()) != -1) {
                    is_number = true;
                    break;
                }
            }
            if (!is_number) {
                flag = false;
            }
            if (!flag) {
                alert('Wrong Password')
            }
            return flag;
        }

        function validateEmail() {
            email = document.getElementById('Email').value
            if (email.search('@') == -1 || email.search('.') == -1) {
                alert("Wrong email")
                return false
            } else {
                return true
            }
        }

        function register() {
            if (validatePass() && validateEmail()) {
                email = document.getElementById('Email').value
                password = document.getElementById('senha').value
                axios.post("localhost:3333/api/auth/register", {
                    "email": email,
                    "password": password
                })
                    .then((response) => {
                        console.log(response)
                    })
                    .catch((erro) => {
                        alert('Erro no servidor')
                    })
            }
        }
